<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40B4E7"
    android:padding="30dp"
    tools:context=".VerifyAccount">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify your account"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_above="@+id/greeting"
        android:textColor="#FFF"
        />

    <TextView
        android:id="@+id/greeting"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2"
        android:layout_centerInParent="true"
        android:layout_marginBottom="60dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="We have send verification code to your email"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textSize="16dp"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:layout_above="@+id/button4"
        android:hint="Enter verification code here.."
        android:layout_marginBottom="20dp" />

    <!--<Button-->
        <!--android:id="@+id/button4"-->
        <!--android:background="@drawable/btn_white_default"-->
        <!--android:textColor="@drawable/btn_white_default"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_marginLeft="0dp"-->
        <!--android:layout_marginBottom="0dp"-->
        <!--android:layout_marginRight="0dp"-->
        <!--android:text="Send"-->
        <!--android:onClick="onClickSendVerifyToken"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/button4"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/asa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doesn't get the code ?"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/buttonaxa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend"
            android:padding="0dp"
            android:layout_marginStart="-25dip"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>