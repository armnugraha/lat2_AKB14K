<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed -->

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!--apply button background transparent, full opacity-->
            <solid android:color="#00ffffff"/>
            <!--make button border solid color, nontransparent-->
            <stroke android:color="#81CCEE" android:width="2dp"/>

            <corners android:radius="2dp"/>
        </shape>

    </item>
    <item android:state_focused="true"
        android:color="#FFF"
        android:drawable="@color/design_default_color_primary"> <!-- focused -->

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!--apply button background transparent, full opacity-->
            <solid android:color="#00ffffff"/>
            <!--make button border solid color, nontransparent-->
            <stroke android:color="#FFF" android:width="2dp"/>

            <corners android:radius="2dp"/>
        </shape>

    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!--apply button background transparent, full opacity-->
            <solid android:color="#00ffffff"/>
            <!--make button border solid color, nontransparent-->
            <stroke android:color="#43b3e6" android:width="2dp"/>

            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>